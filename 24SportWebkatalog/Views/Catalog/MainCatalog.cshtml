@model IEnumerable<_24SportWebkatalog.Models.CatalogItem>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style type="text/css">

        .centerlook1 {
            font-weight: bold;
            width: 1000px;
        }

        body {
        }

        .container {
            padding: 0px;
        }
    </style>
</head>



<body>

    <div class="centerlook1">
        <h2>Hovedkatalog</h2>
        <h3>Herunder kan du se de varer som vi har til rådighed i butikken.</h3>
        @Html.ActionLink("Log ud", "../Account/Login")
    </div>





    <div class="container container" style="background-color:white">
        <div class="


             " style="height:670px;overflow-y:scroll">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ItemName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImgPath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td title="Navn af produkt">
                                @Html.DisplayFor(modelItem => item.ItemName)
                            </td>
                            <td title="Tryk for at forstørre">
                                <div class="popup">
                                    <img src="@String.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(item.ImgPath))" style="height:200px; width:200px;" />

                                </div>


                                <div class="modal fade" id="imagemodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                <img src="" class="imagepreview" style="width: 100%;">
                                            </div>
                                        </div>
                                    </div>
                                </div>







                            </td>
                            <td title="Beskrivelse af hvad der kan være på medaljen samt hvad det er">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td title="Hvad prisen er for det enkelte produkt">
                                Kr. @Html.DisplayFor(modelItem => item.Price)
                                <a id="btn_add" href="@Url.Action("Add", "Indkøbskurv")" class="btn btn-info btn-lg">
                                    <span class="glyphicon glyphicon-shopping-cart"></span> Tilføj til kurv
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

</body>
</html>

<script>
$(function() {
		$('.popup').on('click', function() {
			$('.imagepreview').attr('src', $(this).find('img').attr('src'));
			$('#imagemodal').modal('show');
		});
});
 </script>